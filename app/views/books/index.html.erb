<h1>Cuadernos</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %> | </td>
        <td><%= book.notes.count %> notas | </td>
        <td><%= link_to 'Ver', book %> | </td>
        <td><%= link_to 'Editar', edit_book_path(book) %> | </td>
        <td><%= link_to 'Eliminar', book, method: :delete, data: { confirm: 'Estas seguro que deseas eliminarlo? Esta acciÃ³n es irreversible' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

